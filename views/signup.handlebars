<h1 class="link-heading">Create Your Account</h1>

<form id="signup-form" class="form">
  <div class="field">
    <label for="username-signup">username:</label><br>
    <input type="text" id="username-signup" />
  </div>
  <div class="field" > 
    <label for="email-signup">email:</label><br>
    <input type="text" id="email-signup" />
  </div>
  <div class="field">
    <label for="password-signup">password:</label><br>
    <input type="password" id="password-signup" />
  </div>
  <div class="field">
    <button class="submit" type="submit">Sign Up</button>
  </div>
  <div class="field">
      <span>Already have an accout?</span>
      <a href="/login" class="login">Log In</a>
  </div>
  <div class="field">
      <a href="/" class="center">Return Home</a>
  </div>
  
</form>
<script src="/javascript/signup.js"></script>